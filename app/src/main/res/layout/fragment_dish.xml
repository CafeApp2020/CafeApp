<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".frameworks.view.menu.dish.DishFragment">

    <ImageView
        android:id="@+id/fragment_dish_image_imageview"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dish_card_picture_height"
        android:contentDescription="@string/dish_picture"
        android:scaleType="centerCrop"
        android:src="@drawable/dishtemp"/>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/linearLayoutCompat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="@dimen/default_margin"
        android:layout_marginEnd="@dimen/default_margin">
        <TextView
            android:id="@+id/weigthTW"
            android:layout_width="@dimen/zero"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/marginDefault"
            android:layout_weight="1"
            style="@style/CafeTextStyle.Body"/>

        <TextView
            android:id="@+id/priceTW"
            android:layout_width="@dimen/zero"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/default_margin"
            android:layout_marginTop="@dimen/marginDefault"
            android:layout_weight="1"
            android:gravity="end"
            style="@style/CafeTextStyle.Body"/>

    </androidx.appcompat.widget.LinearLayoutCompat>

    <TextView
        android:id="@+id/descriptionTW"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/marginDefault"
        android:layout_marginStart="@dimen/default_margin"
        android:layout_marginEnd="@dimen/default_margin"
        style="@style/CafeTextStyle.Body"/>

</androidx.appcompat.widget.LinearLayoutCompat>